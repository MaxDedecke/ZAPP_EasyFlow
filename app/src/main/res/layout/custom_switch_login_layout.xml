<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:focusable="false">

        <TextView
            android:id="@+id/preference_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="75dp"
            android:ellipsize="marquee"
            android:lineSpacingExtra="3sp"
            android:singleLine="true"
            android:text="@string/settings_log_in"
            android:textColor="@color/buttonGreen"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preference_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/preference_title"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="2dp"
            android:textStyle="bold"
            android:text="@string/settings_log_in_summary" />

        <LinearLayout
            android:id="@+id/switch_login_layout"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checked="true"
                android:textSize="24sp" />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/preference_divider" />

</LinearLayout>
