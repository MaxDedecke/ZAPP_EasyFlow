<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnNum_1"
                style="@style/buttonCalc"
                android:text="1" />

            <Button
                android:id="@+id/btnNum_2"
                style="@style/buttonCalc"
                android:text="2" />

            <Button
                android:id="@+id/btnNum_3"
                style="@style/buttonCalc"
                android:text="3" />

            <Button
                android:id="@+id/btnOp_Plus"
                style="@style/buttonCalc"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/firstRow">

            <Button
                android:id="@+id/btnNum_4"
                style="@style/buttonCalc"
                android:text="4" />

            <Button
                android:id="@+id/btnNum_5"
                style="@style/buttonCalc"
                android:text="5" />

            <Button
                android:id="@+id/btnNum_6"
                style="@style/buttonCalc"
                android:text="6" />

            <Button
                android:id="@+id/btnOp_Minus"
                style="@style/buttonCalc"
                android:text="-" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/secondRow">


            <Button
                android:id="@+id/btnNum_7"
                style="@style/buttonCalc"
                android:text="7" />

            <Button
                android:id="@+id/btnNum_8"
                style="@style/buttonCalc"
                android:text="8" />

            <Button
                android:id="@+id/btnNum_9"
                style="@style/buttonCalc"
                android:text="9" />

            <Button
                android:id="@+id/btnOp_Mul"
                style="@style/buttonCalc"
                android:text="*" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fourthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/thirdRow">


            <Button
                android:id="@+id/btnNum_Period"
                style="@style/buttonCalc"
                android:text="." />

            <Button
                android:id="@+id/btnNum_0"
                style="@style/buttonCalc"
                android:text="0" />

            <Button
                android:id="@+id/btnOp_Equals"
                style="@style/buttonCalc"
                android:text="=" />

            <Button
                android:id="@+id/btnOp_Div"
                style="@style/buttonCalc"
                android:text="รท" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCategory"
            style="@style/buttonCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/kategorie"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>