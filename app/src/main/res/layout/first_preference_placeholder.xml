    android:paddingLeft="2dp"
    android:paddingTop="24dp"
    android:paddingRight="2dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
