<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/border_grey"
    android:paddingLeft="4dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/list_group_role"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:src="@drawable/ic_admin_role"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Email"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/list_button_delete"
        app:layout_constraintStart_toEndOf="@id/list_group_role"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/list_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/placeholder_description"
        app:layout_constraintStart_toEndOf="@id/list_group_role"
        app:layout_constraintTop_toBottomOf="@id/list_email" />

    <Button
        android:id="@+id/list_button_delete"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:background="@color/lightGrey"
        android:drawableRight="@drawable/ic_delete_white_32dp"
        android:enabled="false"
        android:padding="15dp"
        android:text="@string/delete"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

</android.support.constraint.ConstraintLayout>